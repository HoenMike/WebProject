@inject ApplicationDbContext DbContext
@inject ISnackbar Snackbar
@using Microsoft.AspNetCore.Components.Forms
@using MudBlazor

<MudDialog>
  <DialogContent>
    <MudGrid>
      <MudItem xs="12">
        <MudTextField @bind-Value="editItem.Name" Label="Name" Required="true" />
      </MudItem>
      <MudItem xs="12">
        <MudTextField @bind-Value="editItem.Price" Label="Price" Required="true" InputType="InputType.Number" />
      </MudItem>
      <MudItem xs="12">
        <MudTextField @bind-Value="editItem.ThumbnailUrl" Label="Thumbnail URL" />
      </MudItem>
      <MudItem xs="12">
        <MudTextField @bind-Value="editItem.Description" Label="Description" Textarea="true" Rows="3" />
      </MudItem>
      <MudItem xs="12">
        <MudTextField @bind-Value="editItem.StockQuantity" Label="Stock Quantity" Required="true" InputType="InputType.Number" />
      </MudItem>
      <MudItem xs="12">
        <MudTextField @bind-Value="editItem.CategoryId" Label="Category ID" Required="true" InputType="InputType.Number" />
      </MudItem>
    </MudGrid>
  </DialogContent>
  <DialogActions>
    <MudButton Variant="Variant.Filled" OnClick="EditItem" Color="Color.Success">Save</MudButton>
    <MudButton OnClick="Cancel" Color="Color.Primary">Cancel</MudButton>
  </DialogActions>
</MudDialog>

@code {
  [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;
  [Parameter] public Item Item { get; set; } = default!;
  private Item editItem = new();

  protected override void OnInitialized()
  {
    editItem = new Item
      {
        Id = Item.Id,
        Name = Item.Name,
        Price = Item.Price,
        ThumbnailUrl = Item.ThumbnailUrl,
        Description = Item.Description,
        StockQuantity = Item.StockQuantity,
        CategoryId = Item.CategoryId
      };
  }

  private async Task EditItem()
  {
    if (string.IsNullOrWhiteSpace(editItem.Name))
    {
      Snackbar.Add("Name cannot be empty", Severity.Error);
      return;
    }

    try
    {
      var item = await DbContext.Items.FindAsync(editItem.Id);
      if (item != null)
      {
        item.Name = editItem.Name;
        item.Price = editItem.Price;
        item.ThumbnailUrl = editItem.ThumbnailUrl;
        item.Description = editItem.Description;
        item.StockQuantity = editItem.StockQuantity;
        item.CategoryId = editItem.CategoryId;
        await DbContext.SaveChangesAsync();
        Snackbar.Add("Item updated successfully", Severity.Success);
        MudDialog.Close(DialogResult.Ok(editItem));
      }
    }
    catch (Exception ex)
    {
      Snackbar.Add($"Error updating item: {ex.Message}", Severity.Error);
    }
  }

  private void Cancel()
  {
    MudDialog.Cancel();
  }
}