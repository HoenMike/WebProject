@using WebProject.Theme
@inherits LayoutComponentBase

<MudThemeProvider Theme="@CustomTheme.MyTheme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<style>
  html,
  body {
    height: 100%;
    margin: 0;
    overflow: hidden;
    background-color: #ffe6ec;
  }

  .page {
    min-height: 100vh;
    height: 100vh;
    position: relative;
    display: flex;
    flex-direction: column;
    background-color: #ffe6ec;
    overflow-y: auto;
    overflow-x: auto;
  }

  main {
    flex: 1 0 auto;
    display: flex;
    flex-direction: column;
  }

  .page-body {
    flex: 1 0 auto;
  }

  .footer {
    padding: 10px 0;
    text-align: center;
    bottom: 0;
    width: 100%;
    flex-shrink: 0;
    background-color: #fff;
    padding: 20px;
    border-top: 1px solid #ddd;
    font-family: Arial, sans-serif;
    margin-top: 30px;
    min-height: 250px;
  }

  .sidebar {
    background-color: white;
  }

  .top-row {
    background-color: white;
    border-bottom: 1px solid pink;
    height: 3.5rem;
    display: flex;
    align-items: center;
  }

  .top-row ::deep a,
  .top-row ::deep .btn-link {
    white-space: nowrap;
    margin-left: 1.5rem;
    text-decoration: none;
  }

  .top-row ::deep a:hover,
  .top-row ::deep .btn-link:hover {
    text-decoration: underline;
  }

  .top-row ::deep a:first-child {
    overflow: hidden;
    text-overflow: ellipsis;
  }
</style>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

<style>
  .page {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  main {
    flex: 1 0 auto;
    display: flex;
    flex-direction: column;
  }

  .page-body {
    flex: 1 0 auto;
  }

  .footer {
    flex-shrink: 0;
    background-color: #fff;
    padding: 20px;
    border-top: 1px solid #ddd;
    font-family: Arial, sans-serif;
    margin-top: 30px;
    min-height: 250px;
  }
</style>

<div class="page">
  @if (!isLoginPage && !isRegisterPage)
  {
    <div class="sidebar">
      <NavMenu />
    </div>
  }

  <main>
    <article class="page-body">
      @Body
    </article>
    <footer class="footer">
      <div class="container" style="display: flex; justify-content: space-between; flex-wrap: wrap;">
        <MudGrid>
          <MudItem xs="4" style="flex: 1; min-width: 200px;">
            <div>
              <span class="text-pink" style="font-weight: bold; font-size: 1.5rem;">Daily</span><span
                style="font-weight: bold; font-size: 1.5rem;">Store</span>
            </div>
            <div style="margin-top: 10px; margin-right: 10px;">
              <p>
                An online convenience store offering a wide range of essential products for families and individuals. We
                aim to make shopping easy and convenient by delivering directly to your doorstep. With a focus on
                reliability and variety, we strive to simplify your shopping experience.
              </p>
            </div>
          </MudItem>


          <MudItem xs="2" style="flex: 1; min-width: 150px;">
            <strong>Category</strong>
            <ul style="list-style: none; padding: 0; margin: 10px 0; margin-top: 10px;">
              <li><a href="" style="text-decoration: none; color: black;">Home</a></li>
              <li><a href="itembrowse" style="text-decoration: none; color: black;">Item Browse</a></li>
              <li><a href="news" style="text-decoration: none; color: black;">News</a></li>
              <li><a href="cart" style="text-decoration: none; color: black;">Cart</a></li>
              <li><a href="wishlist" style="text-decoration: none; color: black;">Wishlist</a></li>
            </ul>
          </MudItem>




          <MudItem xs="3" style="flex: 1; min-width: 150px;">
            <strong>Contact</strong>
            <ul style="list-style: none; padding: 0; margin: 10px 0; margin-top: 10px;">
              <li>
                <p>📞 0123456789</p>
              </li>
              <li>
                <p>✉️ dailystore@gmail.com</p>
              </li>
              <li>
                <p>📍 WRF5+8JV, Biên Hòa, Đồng Nai</p>
              </li>
            </ul>
            <!-- Social Media Links -->
            <div style="display: flex; gap: 20px; margin-top: 30px;">
              <a href="https://facebook.com" target="_blank" style="text-decoration: none;">
                <i class="fab fa-facebook" style="font-size: 35px;"></i>
              </a>
              <a href="https://instagram.com" target="_blank" style="text-decoration: none;">
                <i class="fab fa-instagram" style="font-size: 35px;"></i>
              </a>
              <a href="https://github.com/HoenMike/WebProject" target="_blank" style="text-decoration: none;">
                <i class="fab fa-github" style="font-size: 35px;"></i>
              </a>
            </div>
          </MudItem>


          <MudItem xs="3" style="flex: 1; min-width: 210px; text-align: center;">
            <strong>Gallery</strong>
            <div style="margin-top: 5px; display: flex; justify-content: center; flex-wrap: wrap;">
              <img
                src="https://png.pngtree.com/thumb_back/fh260/background/20240409/pngtree-empty-shopping-basket-on-wood-table-over-grocery-store-supermarket-blur-image_15653639.jpg"
                alt="Store image" style="margin: 5px; width: 110px; height: 80px; object-fit: cover;" />
              <img
                src="https://png.pngtree.com/thumb_back/fh260/background/20240409/pngtree-empty-shopping-basket-on-wood-table-over-grocery-store-supermarket-blur-image_15653639.jpg"
                alt="Store image" style="margin: 5px; width: 110px; height: 80px; object-fit: cover;" />
              <img
                src="https://png.pngtree.com/thumb_back/fh260/background/20240409/pngtree-empty-shopping-basket-on-wood-table-over-grocery-store-supermarket-blur-image_15653639.jpg"
                alt="Store image" style="margin: 5px; width: 110px; height: 80px; object-fit: cover;" />
              <img
                src="https://png.pngtree.com/thumb_back/fh260/background/20240409/pngtree-empty-shopping-basket-on-wood-table-over-grocery-store-supermarket-blur-image_15653639.jpg"
                alt="Store image" style="margin: 5px; width: 110px; height: 80px; object-fit: cover;" />
            </div>
          </MudItem>
        </MudGrid>
      </div>
    </footer>
    <footer class="footer">
      <div class="footer-content">
        © 2023 Your Company. All rights reserved.
      </div>
    </footer>
  </main>
</div>

<div id="blazor-error-ui">
  An unhandled error has occurred.
  <a href="" class="reload">Reload</a>
  <a class="dismiss">🗙</a>
</div>

@code {
  private bool isLoginPage;
  private bool isRegisterPage;

  protected override void OnParametersSet()
  {
    isRegisterPage = NavigationManager.Uri.Contains("/Account/Register");
    isLoginPage = NavigationManager.Uri.Contains("/Account/Login");
  }
}