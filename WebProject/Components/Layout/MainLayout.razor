@using WebProject.Theme
@inherits LayoutComponentBase

<MudThemeProvider Theme="@CustomTheme.MyTheme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<div class="page">
    @if (!isLoginPage && !isRegisterPage)
    {
        <div class="sidebar">
            <NavMenu />
        </div>
    }

    <main>
        <article class="page-body">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private bool isLoginPage;
    private bool isRegisterPage;

    protected override void OnParametersSet()
    {
        isRegisterPage = NavigationManager.Uri.Contains("/Account/Register");
        isLoginPage = NavigationManager.Uri.Contains("/Account/Login");
    }
}